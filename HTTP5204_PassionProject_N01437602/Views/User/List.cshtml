@model IEnumerable<HTTP5204_PassionProject_N01437602.Models.UserDto>

@{
    ViewBag.Title = "List";
}

<h2>User Database</h2>

<p>
    @Html.ActionLink("Add User", "Create")
</p>

<p>
    @using (Html.BeginForm("List", "User", FormMethod.Get))
    {
    @Html.TextBox("search") <input type="submit" value="search" />
    }
</p>

<p>@Html.ActionLink("View Full User List", "List")</p>

<table class="table">

    @if (Model.Count() == 0)
    {
        <p>There are no results for that search.</p>
    }
    else
    {

        <tr>
            <th>
                @Html.DisplayNameFor(model => model.UserFirstName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.UserLastName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.UserName)
            </th>
            <th></th>
        </tr>

        foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.UserFirstName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.UserLastName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.UserName)
                </td>
                <td>
                    @Html.ActionLink("Edit", "Edit", new { id = item.UserID }) |
                    @Html.ActionLink("View Details", "Details", new { id = item.UserID }) |
                    @Html.ActionLink("Delete", "DeleteConfirm", new { id = item.UserID })
                </td>
            </tr>
        }
    }

</table>
